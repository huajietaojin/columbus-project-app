@import '../../../common/common.wxss';

.main {
  width: 100%;
  height: 100%;
  background-color: #151721;
}

.store-content {
  width: 100%;
  display: flex;
  justify-content: center;
}

.store-content-box {
  width: 94%;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #afafaf;
  
}

.store-content-title-text {
  line-height: 60rpx;
  font-size: 36rpx;
  padding-bottom: 20rpx;
  color: #fff;
}

.store-content-logo-box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.store-content-logo-image {
  width: 172rpx;
  height: 172rpx;
  border-radius: 50%;
  background-color: #fff;
  border: 2rpx solid #fff;
}

.store-content-title-box {
  width: 100%;
}

.store-content-contact-box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.store-content-contact-text {
  font-size: 26rpx;
  color: #fff;
  padding-bottom: 12rpx;
}

.store-address-text {
  font-size: 26rpx;
  line-height: 52rpx;
  color: #afafaf;
}

.see-product-btn {
  font-size: 24rpx;
  color: #efefef;
  padding-bottom: 12rpx;
}

.right-icon {
  width: 24rpx;
  height: 24rpx;
}

.follow-btn {
  width: 120rpx;
  line-height: 60rpx;
  border: 1px solid #fb3159;
  color: #fff;
  background-color: #fb3159;
  text-align: center;
  font-size: 28rpx;
  border-radius: 6rpx;
  display: inline-block;
}

.openration-share {
  position: relative;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 50rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
  border-radius: 50rpx;
  background: #fff;
  border: 1rpx solid #09bb07;
  color: #fff;
  font-size: 28rpx;
}

.share-text {
  color: #09bb07;
}

.store-box {
  padding: 20rpx 10rpx 20rpx 16rpx;
  min-height: 80rpx;
  background-color: #151721;
}

.store-box-item {
  padding: 0 10rpx;
  line-height: 50rpx;
  position: relative;
}

.address-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 0;
  top: 10rpx;
}

/* 底部转发按钮 */

.sheet-button {
  padding: 0;
  line-height: 100rpx;
}

.sheet-item-button {
  background-color: #fff;
  position: relative;
  text-align: center;
  line-height: 100rpx;
  font-size: 18px;
}

.sheet-button-cancel {
  padding: 0;
  line-height: 60rpx;
}

.modal-content-con {
  background-color: #fff;
  margin: 0 70rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}

.store-info-tab-box {
  width: 100%;
  background-color: #000;
}

.store-info-tab-nav {
  display: inline-block;
  width: 33.33%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #000;
  box-sizing: border-box;
  text-align: center;
  color: #8f8f8f;
}

.store-info-tab-nav.on {
  color: #fff;
  border-bottom: 6rpx solid #ffb608;
}

.store-info-display-area {
  padding: 0;
  width: 100%;
   background-color: #151721;
}

.store-image-content {
  height: 450rpx;
  width: 100%;
  padding-top: 16rpx;
}

.store-image {
  height: 100%;
  width: 100%;
}

.store-video-list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.store-video-content {
  width: 33%;
  height: 280rpx;
  padding-bottom: 1rpx;
}

.store-video-image {
  width: 100%;
  height: 100%;
}

.store-coupon-list {
  width: 100%;
  background-color: #fff;
}

.store-picture-list {
  width: 100%;
  background-color: #000;
}
