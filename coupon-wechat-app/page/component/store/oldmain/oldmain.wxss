@import '../../../common/common.wxss';

.main{
    height: 100%;
    background-color: #fff;
}

.swiper {
  height: 550rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}

.see-product-box{
  padding-bottom: 30rpx 0 30rpx 0;
  min-height: 140rpx;
  line-height: 140rpx;
  text-align: center;
  border-bottom: 1rpx solid #ededed;
}

.see-btn {
  width:330rpx;
  line-height:80rpx;
  border:1px solid #ffb608;
  color:#ffb608;
  text-align:center;
  font-size:32rpx;
  border-radius:10rpx;
  display:inline-block;
}
.coupon-box-hd {
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 30rpx;
}
.coupon-title {
  font-size: 36rpx;
  padding-left: 90rpx;
}
.coupon-box-icon{
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  left:30rpx;
  top:26rpx;
}

.openration-share{
    position: relative;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 50rpx;
    margin-bottom: 40rpx;
    box-sizing: border-box;
    border-radius: 50rpx;
    background: #FFFFFF;
    border: 1rpx solid #09bb07;
    color: #fff;
    font-size: 28rpx;
}
.share-text{
    color: #09bb07;
}

.list-box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  align-content: space-around;
  justify-content: flex-start;
}

.product-item {
    width: 50%;
    height: 100%;
    text-align: center;
    background: #f5f6f5;
}

.product-item image{
    width: 240rpx;
    height: 240rpx;
    margin: 30rpx 0 20rpx;
}
.product-item .newest-text{
    font-size: 32rpx;
    line-height: 45rpx;
}

.store-box {
  padding: 20rpx 30rpx 30rpx 30rpx;
  border-bottom:1rpx dashed #ededed;
  min-height: 160rpx;
}
.store-box-title {
  line-height: 60rpx;
  font-size: 36rpx;
  padding-bottom: 20rpx;
}
.store-box-item{
  padding: 0 10rpx;
  line-height: 50rpx;
  position: relative;
}
.address-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 0;
  top: 10rpx;
}
.store-address-text{
  font-size: 30rpx;
  padding-left: 50rpx;
  line-height: 60rpx;
}

/* 底部转发按钮 */
.sheet-button {
  padding:0;
  line-height: 100rpx;
}
.sheet-item-button {
  background-color: #fff;
  position: relative;
  text-align: center;
  line-height: 100rpx;
  font-size: 18px;
}
.sheet-button-cancel {
  padding:0;
  line-height: 60rpx;
}

.modal-content-con{
  background-color: #ffffff;
  margin: 0 70rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}