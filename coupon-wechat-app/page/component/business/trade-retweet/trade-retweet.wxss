.main{
    height: 100%;
}

.banner image{
    width: 100%;
    height: 400rpx;
}

.goods-tab-nav{
    display: inline-block;
    width: 33.33%;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #ededed;
    box-sizing: border-box;
    text-align: center;
    color: #a3a3a5;
}
.goods-tab-nav.on{
    color: #09bb07;
    border-bottom: 5rpx solid #09bb07;
}
.goods-content{
    padding:40rpx;
}

.openration-share{
    position: relative;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 50rpx;
    margin-bottom: 60rpx;
    box-sizing: border-box;
    border-radius: 50rpx;
    background: #FFFFFF;
    border: 1rpx solid #AB956D;
    color: #fff;
    font-size: 28rpx;
}

.list-box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  align-content: space-around;
  justify-content: flex-start;
}

.product-item {
    width: 50%;
    height: 100%;
    text-align: center;
    background: #f5f6f5;
}

.product-item image{
    width: 240rpx;
    height: 240rpx;
    margin: 30rpx 0 20rpx;
}
.product-item .newest-text{
    font-size: 32rpx;
    line-height: 45rpx;
}

.store-box {
  padding: 40rpx 30rpx 20rpx;
  border-bottom:1rpx dashed #ededed;
  margin-bottom: 20rpx;
}
.store-box-title {
  line-height: 60rpx;
  font-size: 40rpx;
  padding-bottom: 20rpx;
  border-bottom:1rpx dashed #ededed;
  margin-bottom:20rpx;
}
.store-box-item{
  padding: 0 10rpx;
  line-height: 50rpx;
  position: relative;
}
.address-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 0;
  top: 10rpx;
}
.store-address-text{
  font-size: 30rpx;
  padding-left: 50rpx;
}