@import '../../../common/common.wxss';

/**index.wxss**/

.common {
  background-color: #f0f4f7;
  height: 100%;
  width: 100%;
}

.header {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  box-sizing: border-box;
  background-color: #151721;
  border-bottom: 1rpx solid #e9e9e9;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 172rpx;
}

.userinfo-avatar {
  width: 172rpx;
  height: 172rpx;
  border-radius: 50%;
  border: 2px solid #fff;
}

.userinfo-nickname {
  margin-top: 32rpx;
  color: #fff;
}

.usermotto {
  margin-top: 200px;
}

.section-scope {
  background-color: #fff;
}
.section-scope.bind {
  margin-bottom: 0rpx;
}
.section-item.bind {
  height: 90rpx;
}
.section-scope.coupon {
  margin-top: 18rpx;
  margin-bottom: 18rpx;
}
.section-scope.mb {
  margin-bottom: 18rpx;
}
.section-item {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  position: relative;
}

.item-text {
  font-size: 32rpx;
  color: #2d2d2d;
  padding-left: 82rpx;
}
.direction-left {
  position: absolute;
  left: 32rpx;
  top: 33rpx;
  width: 34rpx;
  height: 34rpx;
}
.direction-right {
  position: absolute;
  right: 32rpx;
  top: 35rpx;
  width: 30rpx;
  height: 30rpx;
}

.iphone-icon {
  position: absolute;
  left: 24rpx;
  top: 25rpx;
  width: 40rpx;
  height: 40rpx;
}



.modal-content-hd {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  display: flex;
  margin-bottom: 30rpx;
  position: relative;
}
.modal-content-item {
  height: 80rpx;
  margin-bottom: 30rpx;
}
.input-text {
  height: 80rpx;
  line-height: 80rpx;
  border: 1px solid #e9e9e9;
  padding:0 16rpx;
}
.get-code {
  font-size: 28rpx;
  float:right;
  height:80rpx;
  border: 1px solid #09bb07;
  border-radius: 0;
  background-color: #ffffff;
  width: 30%;
  text-align: center;
  line-height:80rpx;
  color:#09bb07;
}
.modal-close{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 0;
  top: 15rpx;
}