@import '../../../common/common.wxss';

/**index.wxss**/

.common {
  background-color: #ffffff;
  height: 100%;
  width: 100%;
}

.modal-box-bind {
  display: flex;
  justify-content:center;
  align-items: center;
  z-index: 300;
}
.modal-content-bind {
  padding: 30rpx;
  background-color: #ffffff;
  display: flex;
  width: 100%;
  border-radius: 8rpx;
  flex-direction:column;
}
.modal-content-hd {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  display: flex;
  margin-bottom: 30rpx;
  position: relative;
}
.modal-content-item {
  height: 80rpx;
  margin-bottom: 30rpx;
}
.input-text {
  height: 80rpx;
  line-height: 80rpx;
  border: 1px solid #e9e9e9;
  padding:0 16rpx;
}
.get-code {
  font-size: 28rpx;
  float:right;
  height:80rpx;
  border: 1px solid #ffb608;
  border-radius: 0;
  background-color: #ffffff;
  width: 30%;
  text-align: center;
  line-height:80rpx;
  color:#ffb608;
}
.get-code.timeout {
  border: 1px solid #e2e1de;
  color:#bbbdc4;
}
